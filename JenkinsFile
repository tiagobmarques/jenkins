pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world && chmod +x gradlew && ./gradlew build"
            }
        }

        stage("Docker Run") {
                steps {
                  script {
                     sshagent(credentials : ['ec2-poc.pem']) {
                        sh "echo Connecting to the remote server"
                        sh '''ssh -t -t ubuntu@ec2-54-242-166-19.compute-1.amazonaws.com -o StrictHostKeyChecking=no << EOF
                        #!/bin/bash -xe
                        echo Connected to HelloWorld-App
                        git clone https://github.com/tiagobmarques/jenkins.git
                        cd jenkins/hello-world
                        chmod +x gradlew
                        sudo curl -L https://poc-escrita-tiago.s3.amazonaws.com/deploy-single-container.sh -o deploy-single-container.sh
                        sudo chmod +x deploy-single-container.sh
                        ./deploy-single-container.sh
                        exit
                        EOF'''
                    }
                 }
                  }
              }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}