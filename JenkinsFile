pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world && chmod +x gradlew && ./gradlew build"
            }
        }

        stage("Docker Run") {
                steps {
                  script {
                     sshagent(credentials : ['ec2-poc.pem']) {
                        sh "echo Connecting to the remote server"
                    }
                 }
                  }
              }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}