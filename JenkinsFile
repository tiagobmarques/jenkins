pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world &&  chmod +x gradlew && ./gradlew build && cd .. && pwd && ls "
            }
        }

        stage("Docker Push") {
            steps {
                sh "pwd && ls && docker build -f Dockerfile -t tiagobm564/devops-jenkins . && docker push tiagobm564/devops-jenkins"
            }
        }

        stage("Docker Run") {
                steps {
                  script {
                     sshagent(credentials : ['ec2-poc.pem']) {
                        sh "echo Connecting to the remote server"
                        sh '''ssh -t -t ubuntu@ec2-54-87-59-82.compute-1.amazonaws.com -o StrictHostKeyChecking=no << EOF
                        #!/bin/bash
                        echo Connected to HelloWorld-App
                        echo Stopping container
                        sudo docker stop -t 0 \\$(sudo docker ps -q)
                        sudo docker container prune --force
                        echo Removing image
                        sudo docker rmi tiagobm564/devops-jenkins:latest
                        sudo docker run -d -p 8080:9090 tiagobm564/devops-jenkins:latest
                        echo Hello-World Application Runnig!!!
                        exit
                        EOF'''
                    }
                 }
                  }
              }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}