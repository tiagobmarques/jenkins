pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world && chmod +x gradlew && ./gradlew build"
            }
        }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}