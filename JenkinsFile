pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world && chmod +x gradlew && ./gradlew build"
            }
        }

        stage("Docker Run") {
                steps {
                  script {
                     sshagent(credentials : ['ec2-poc.pem']) {
                        sh "echo Connecting to the remote server"
                        sh """ssh -t -t ec2-user@ec2-3-87-98-213.compute-1.amazonaws.com -o StrictHostKeyChecking=no << EOF
                        #!/bin/bash -xe
                        echo Connected to HelloWorld-App
                        git clone https://github.com/tiagobmarques/jenkins.git
                        cd jenkins/hello-world
                        chmod +x gradlew
                        ./gradlew build run
                        cd ..
                        sudo docker stop -t 0 $(sudo docker ps -q)
                        sudo docker container prune --force
                        sudo docker rmi tiagobm564/devops-jenkins
                        sudo docker build -f Dockerfile -t tiagobm564/devops-jenkins .
                        sudo docker run -d -p 8080:9090 tiagobm564/devops-jenkins:latest
                        exit
                        EOF"""
                    }
                 }
                  }
              }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}