pipeline {
    agent any
    stages {

        stage('Download sources'){
            steps{
             	checkout scm
            }
        }

        stage("Build") {
            steps {
                sh "cd hello-world && chmod +x gradlew && ./gradlew build"
            }
        }

        stage("Docker Run") {
                steps {
                  script {
                     sshagent(credentials : ['ec2-poc.pem']) {
                        sh "echo Connecting to the remote server"
                        sh """ssh -t -t ec2-user@ip-172-31-29-65 -o StrictHostKeyChecking=no << EOF
                        #!/bin/bash -xe
                        echo Connected to HelloWorld-App
                        exit
                        EOF"""
                    }
                 }
                  }
              }

       }
	post {
		always {
        	cleanWs()
    	}
	}
}